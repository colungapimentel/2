---
interface Props {
  title: string;
  description: string;
  price: string;
  features: string[];
}

const { title, description, price, features } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
  <h3 class="text-xl font-bold text-primary mb-4">{title}</h3>
  <p class="text-gray-700 mb-4">{description}</p>
  <ul class="mb-4 space-y-2">
    {features.map(feature => (
      <li class="flex items-center text-gray-600">
        <svg class="w-4 h-4 mr-2 text-secondary" fill="currentColor" viewBox="0 0 20 20">
          <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
        </svg>
        {feature}
      </li>
    ))}
  </ul>
  <p class="text-primary font-bold text-lg">{price}</p>
</div>